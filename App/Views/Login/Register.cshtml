@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}
@section featured {
    <div class="wrapper">
        <form class="form-signin" action="/Login/Register" method="POST">
            <div class="row" style="text-align:  center;">
                <h3 class="form-signin-heading"><b>Регистрация</b></h3>
            </div>
            <input type="text" class="form-control" name="Surname" placeholder="Фамилия" required="" autofocus="" />
            <br>
            <input type="text" class="form-control" name="Name" placeholder="Имя" required="" autofocus="" />
            <br>
            <input type="text" class="form-control" name="Patronymic" placeholder="Отчество" required="" autofocus="" />
            <br>
            <input type="text" class="form-control" name="Phone" placeholder="Телефон" required="" autofocus="" />
            <br>
            <input type="text" class="form-control" name="Email" placeholder="Email" required="" autofocus="" />
            <br>
            <input type="text" class="form-control" name="Login" placeholder="Логин" required="" autofocus="" />
            <br>
            <input type="password" class="form-control" name="Password" placeholder="Пароль" required="" />
            <input type="password" class="form-control" name="PasswordRepeat" placeholder="Пароль повторно" required="" />
            <button class="btn btn-lg btn-primary btn-block" type="submit">Зарегестрироваться</button>
            <p></p><p></p>
            <p style="text-align:center; color:red;">@ViewBag.ErrorMessage</p>
        </form>
    </div>
}
